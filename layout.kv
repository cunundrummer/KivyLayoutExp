#  IMPORTANT notes!!!

#  checks python file first, does ALL '__init__(...).  Then does .kv file.
#  size, & pos controlled by layout.  (Makes sense?)
#  To control the size of a layout section automatically, use size_hint(val(0-1), val(0-1))
#  To control the size of a layout section manually, set size_hint(None, None), then the size (in dp?)
#  Setting the size_hint to None, makes a fixed size - can be set by user.
#  Double size layout on Y-axis would be size_hint(1, 2)
#  size_hint(.8, .2) is a proportion - 80% width, 20% height

#:set BLACK (0, 0, 0, 1)
#:set table_backcolor (0, .5, 0 , 1)
#:set RED_NUMBER (1, 0, 0, 1)
#:set RED_DARK (.5, 0, 0 , 1)
#:set DARK_GREEN (0, .4, 0, 1)
#:set GREEN (0, 1, 0, 1)
#:set WHITE (1, 1, 1, 1)
#:set NUMBER_HISTORY_COLOR (.108, .122, .137, 1)

<TableBtn@Button>
    canvas.before:
        Color:
            rgba: WHITE
        Line:
            width: 2
            rectangle: self.x, self.y, self.width+1, self.height+1
    background_normal: ''
    background_color: DARK_GREEN

<Root>:
    orientation: 'vertical'
    size_hint: 1, 1
    Header:
    BoxLayout:  # spacer
        size_hint: (1, .1)
    BoxLayout:
        orientation: 'horizontal'
        size_hint: .9, .25
        pos_hint: {'center_x': .5}
        GridLayout:  # Zeros
            padding: 0, 0, 2, 0
            size_hint: .1, 1
            cols: 1
            rows: 2
            TableBtn:
                text: '0'
            TableBtn:
                text: '00'
        BoxLayout:
            TableBox:
        GridLayout:     # columns 2 to 1
            size_hint: .1, 1
            cols: 1
            rows: 3
            TableBtn:
                text: '2 to 1'
            TableBtn:
                text: '2 to 1'
            TableBtn:
                text: '2 to 1'
    BoxLayout:  # Outsides
        orientation: 'vertical'
        size_hint: (.7475, .175)
        pos_hint: {'center_x': .5}
        padding: 0, 3, 0, 0
        GridLayout:  # dozens
            rows: 1
            cols: 3
            TableBtn:
                text: '1st 12'
            TableBtn:
                text: '2nd 12'
            TableBtn:
                text: '3rd 12'
        GridLayout:
            rows: 1
            cols: 6
            TableBtn:
                text: '1-18'
            TableBtn:
                text: 'Odd'
            TableBtn:
                text: 'Red'
                bold: True
                color: RED_NUMBER
            TableBtn:
                text: 'Black'
                bold: True
                color: BLACK
            TableBtn:
                text: 'Even'
            TableBtn:
                text: '19-36'
        BoxLayout:  # spacer
            size_hint: (1, 1)
    Footer:

<TableBox>:
    id: table_box_id
    canvas.before:
        Color:
            rgba: (DARK_GREEN)
        Rectangle:
            pos: self.pos
            size: self.size
    orientation: 'horizontal'


<NumbersGrid>:
    canvas.before:
        Color:
            rgba: WHITE
        Line:
            width: 2
            rectangle: self.x, self.y, self.width, self.height
        Rectangle:
            pos: self.pos
            size: self.size
    id: numbers_grid
    rows: 3
    cols: 12
    background_color: WHITE

<NumberHistory>:
    size_hint: (.1, 1)
    canvas:
        Color:
            rgba: DARK_GREEN
        Rectangle:
            pos: self.pos
            size: self.size
    GridLayout:
        id: numbers_history_container
        cols: 2

<Header>:
    size_hint: (1, .1)
    canvas:
        Color:
            rgba: BLACK
        Rectangle:
            pos: self.pos
            size: self.size
    GridLayout:
        pos_hint: {'top': 1}
        cols: 6
        rows: 1
        Label:
            text: 'col1'
        Label:
            text: 'col2'
        Label:
            text: 'col3'
        Label:
            text: 'col4'
        Label:
            text: 'col5'
        Label:
            text: 'col6'

<Footer>:
    size_hint: (1, .1)
    canvas:
        Color:
            rgba: BLACK
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        text: 'Footer'

